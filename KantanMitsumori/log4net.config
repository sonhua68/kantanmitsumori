<?xml version="1.0" encoding="utf-8" ?>
<log4net>
	<root>
		<level value="DEBUG" />
		<appender-ref ref="InfoDailyAppender" />
		<appender-ref ref="DebugDailyAppender" />
	</root>
	<appender name="InfoDailyAppender" type="log4net.Appender.RollingFileAppender">
		<param name="File" value="logs\"/>
		<param name="DatePattern" value='yyyyMMdd".log"' />
		<param name="AppendToFile" value="true"/>
		<param name="MaximumFileSize" value="5MB"/>
		<param name="RollingStyle" value="Date"/>
		<param name="StaticLogFileName" value="false"/>
		<param name="MaxSizeRollBackups" value="32" />
		<filter type="log4net.Filter.LevelRangeFilter">
			<levelMin value="INFO" />
			<levelMax value="INFO" />
		</filter>
		<layout type="log4net.Layout.PatternLayout">		
			<conversionPattern value="%-5level %date{yyyy/MM/dd HH:mm:ss, fff} %message%newline" />
		</layout>
	</appender>
	<appender name="DebugDailyAppender" type="log4net.Appender.RollingFileAppender">
		<LockingModel type="log4net.Appender.FileAppender+MinimalLock" />
		<param name="File" value="logs\Debug\Debug_" />
		<param name="DatePattern" value="yyyyMMdd&quot;.log&quot;" />
		<param name="RollingStyle" value="date" />
		<maximumFileSize value="10MB" />
		<param name="StaticLogFileName" value="false" />
		<AppendToFile value="true" />
		<filter type="log4net.Filter.LevelRangeFilter">
			<param name="LevelMin" value="DEBUG" />
			<param name="LevelMax" value="DEBUG" />
		</filter>
		<layout type="log4net.Layout.PatternLayout">
			<ConversionPattern value="%-5level %date{yyyy/MM/dd HH:mm:ss}, %message%n" />
		</layout>
	</appender>
	<appender name="DebugDailyAppender" type="log4net.Appender.RollingFileAppender">
		<LockingModel type="log4net.Appender.FileAppender+MinimalLock" />
		<param name="File" value="logs\Error\Error_" />
		<param name="DatePattern" value="yyyyMMdd&quot;.log&quot;" />
		<param name="RollingStyle" value="date" />
		<maximumFileSize value="10MB" />
		<param name="StaticLogFileName" value="false" />
		<AppendToFile value="true" />
		<filter type="log4net.Filter.LevelRangeFilter">
			<param name="LevelMin" value="ERROR" />
			<param name="LevelMax" value="FATAL" />
		</filter>
		<layout type="log4net.Layout.PatternLayout">
			<ConversionPattern value="%-5level %date{yyyy/MM/dd HH:mm:ss}, %message%n" />
		</layout>
	</appender>
</log4net>


